@model BT2_Nhom3_23WebC.Models.Product
@{
    ViewData["Title"] = "Thêm sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h2>Thêm mới sản phẩm </h2>
<form asp-action="Add" method="post">
    <div>
        <label>Mã sản phẩm</label>
        <input asp-for="MaSP" />
    </div>
    <div>
        <label>Tên sản phẩm</label>
        <input asp-for="TenSP" />
    </div>
    <div>
        <label>Đơn giá</label>
        <input asp-for="DonGia" type="number" step="0.01" />
    </div>
    <div>
        <label>Đơn giá khuyến mãi</label>
        <input asp-for="DonGiaKhuyenMai" type="number" step="0.01" />
    </div>
    <div>
        <label>Hình ảnh</label>
        <input asp-for="HinhAnh" />
    </div>
    <div>
        <label>Mô tả</label>
        <textarea asp-for="MoTa"></textarea>
    </div>
    <div>
        <label>Loại sản phẩm</label>
        <input asp-for="LoaiSP" />
    </div>
    <button type="submit">Thêm sản phẩm</button>
</form>
